<idea-plugin>
    <id>engineering.cute.cutekit.integration</id>
    <name>Cutekit</name>
    <vendor email="oss@cute.engineering" url="https://cute.engineering">Cute Engineering</vendor>
    <description><![CDATA[
        Adds the CuteKit Explorer tool window for browsing CuteKit projects and externs.
    ]]></description>

    <depends>com.intellij.modules.clion</depends>
    <depends>org.jetbrains.plugins.terminal</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
            id="CuteKit Explorer"
            anchor="right"
            factoryClass="engineering.cute.cutekit.clion.toolwindow.CutekitDependenciesToolWindowFactory"
            canCloseContents="false"
        />
        <notificationGroup
            id="Cutekit"
            displayType="BALLOON"
            isLogByDefault="true"
        />
    </extensions>

    <actions>
        <action
            id="engineering.cute.cutekit.clion.actions.CutekitNewComponentAction"
            class="engineering.cute.cutekit.clion.actions.CutekitNewComponentAction"
            text="CuteKit Component"
            description="Create a new CuteKit component"
            icon="icons/cutekitComponent.svg">
            <add-to-group group-id="NewGroup" anchor="last" />
        </action>
        <action
            id="engineering.cute.cutekit.clion.actions.SetActiveCutekitComponentAction"
            class="engineering.cute.cutekit.clion.actions.SetActiveCutekitComponentAction"
            text="Generate IDE Build Config"
            description="Generate IDE build configuration for this CuteKit component"
            icon="icons/cutekitConfig.svg">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="before" relative-to-action="NewElement" />
        </action>
    </actions>
</idea-plugin>
