<idea-plugin>
    <id>engineering.cute.cutekit.clion</id>
    <name>Cutekit Integration</name>
    <vendor email="oss@cute.engineering" url="https://cute.engineering">Cute Engineering</vendor>
    <description><![CDATA[
        Provides the CuteKit Explorer tool window in CLion to visualize CuteKit externs alongside the project tree, with full access to standard file actions.
    ]]></description>

    <depends>com.intellij.modules.clion</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
            id="CuteKit Explorer"
            anchor="right"
            factoryClass="engineering.cute.cutekit.clion.toolwindow.CutekitDependenciesToolWindowFactory"
            canCloseContents="false"
        />
    </extensions>
</idea-plugin>
